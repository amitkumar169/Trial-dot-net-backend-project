@model trial2.Models.Blog
@{
    ViewBag.Title = "View_blog";
    Layout = "~/Views/Shared/_Admin.cshtml";
    int i = 0;
}

<h2 class="text-center p-3">All Blogs</h2>


<div class="container">
    <table class="table text-center">
        <thead>
            <tr>
                <th scope="col">S.No</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.View_blog)
            {
            <tr>
                <th scope="row">@(++i ) </th>

                <td>@item.blog_title</td>

                <td>@item.blog_desc</td>

                <td>@item.blog_image</td>

                <td><a href="@Url.Action("Add_blog","Admin" , new { id= @item.blog_id })"><i class="fa-solid fa-pen-to-square"></i></a></td>
                <td><a href="@Url.Action("Deleteblog","Admin" , new { id = @item.blog_id})"><i class="fa-solid fa-trash"></i></a></td>
            </tr>
            }
        </tbody>
    </table>
</div>


